	<view style="padding:20rpx" />
	<van-cell-group>
		<van-cell value="编辑标签" is-link>
			<view slot="title">
				<view class="van-cell-text">我的标签</view>
				<van-tag type="primary">#标签</van-tag>
			</view>
		</van-cell>
	</van-cell-group>
