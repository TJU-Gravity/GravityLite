	<van-cell-group>
		<van-field value="{{ sms }}" center clearable label="微信号" border="{{ true }}" use-right-icon-slot>
	<van-icon slot="right-icon" bindtap="changeVisibility" data-index="1" name="{{wechatVisibility}}" />
		</van-field>
		<van-field value="{{ sms }}" center clearable label="昵称" border="{{ true }}" />

		<van-field value="{{ sms }}" center clearable label="性别" border="{{ true }}" />

		<van-field value="{{ sms }}" center clearable label="自我介绍" border="{{ true }}" />

		<van-field value="{{ sms }}" center clearable label="学校" border="{{ true }}" />

		<van-field value="{{ sms }}" center clearable label="专业" border="{{ true }}" />

		<van-field value="{{ sms }}" center clearable label="年级" border="{{ true }}" />
	</van-cell-group>
	<view style="padding:20rpx" />
	<van-cell-group>

		<van-field value="{{ sms }}" center clearable label="手机号" border="{{ true }}"  use-right-icon-slot>
